<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASIC LINK -->
    <link name = "base_link">

    </link>

    <joint name = "chassis_joint" type="fixed">
        <parent link = "base_link"/>
        <child link = "chassis"/>
        <origin xyz = "-0.4 0 0"/>
    </joint>

    <!-- CHASSIS LINK -->
    <link name = "chassis">
        <visual>
            <origin xyz = "0.15 0 0.075"/>
            <geometry>
                <box size = "0.8 0.3 0.15"/>
            </geometry>
            <material name = "white"/>
        </visual>
    </link>

    <!-- LEFT BACK LINK -->
    <joint name = "left_wheel_joint_back" type = "continuous">
        <parent link = "base_link"/>
        <child link = "left_wheel_back" />
        <origin xyz = "0 0.175 0" rpy = "-${pi/2} 0 0"/>
        <axis xyz = "0 0 1"/>
    </joint>

    <link name = "left_wheel_back">
        <visual>
            <geometry>
                <cylinder radius = "0.05" length = "0.04" />
            </geometry>
            <material name = "blue" />
        </visual>
    </link>


    <!-- RIGHT BACK LINK -->
    <joint name = "right_wheel_joint_back" type = "continuous">
        <parent link = "base_link"/>
        <child link = "right_wheel_back" />
        <origin xyz = "0 -0.175 0" rpy = "${pi/2} 0 0"/>
        <axis xyz = "0 0 -1"/>
    </joint>

    <link name = "right_wheel_back">
        <visual>
            <geometry>
                <cylinder radius = "0.05" length = "0.04" />
            </geometry>
            <material name = "blue" />
        </visual>
    </link>

    <!-- LEFT FRONT LINK -->
    <joint name = "left_wheel_joint_front" type = "continuous">
        <parent link = "chassis"/>
        <child link = "left_wheel_front" />
        <origin xyz = "0 0.175 0" rpy = "-${pi/2} 0 0"/>
        <axis xyz = "0 0 1"/>
    </joint>

    <link name = "left_wheel_front">
        <visual>
            <geometry>
                <cylinder radius = "0.05" length = "0.04" />
            </geometry>
            <material name = "blue" />
        </visual>
    </link>


    <!-- RIGHT FRONT LINK -->
    <joint name = "right_wheel_joint_front" type = "continuous">
        <parent link = "chassis"/>
        <child link = "right_wheel_front" />
        <origin xyz = "0 -0.175 0" rpy = "${pi/2} 0 0"/>
        <axis xyz = "0 0 -1"/>
    </joint>

    <link name = "right_wheel_front">
        <visual>
            <geometry>
                <cylinder radius = "0.05" length = "0.04" />
            </geometry>
            <material name = "blue" />
        </visual>
    </link>
</robot>